@model IEnumerable<ITDepartment_DataAccess.models.Device>

@{
    ViewBag.Title = "Device List";
}

<h2>Device List</h2>

<table class="table">
    <thead>
        <tr>
            <th>ID</th>
            <th>Device Name</th>
            <th>Device Category</th>
            <th>Acquisition Date</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var device in Model)
        {
            <tr>
                <td>@device.Id</td>
                <td>@device.Name</td>
                <td>@device.Category?.Name</td>
                <td>@device.AcquisitionDate.ToString("d")</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@device.Id" class="btn btn-primary">Edit</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<a asp-action="Create" asp-controller="Device" class="btn btn-success">Add New Device</a>
